<h1>Show Page for <%= @product.name %></h1>

<div>
      <%= form_with url: product_path(@product), method: :get do |f| %>
        <%= f.text_field :start_date,
          value: params[:start_date],
          data: {
            controller: "flatpickr",
            }
          %>
        <%= f.submit class:'book-btn' %>
      <% end %>
</div>

<div style="width: 800px;" data-controller="chart" data-prices=<%= @allprices.to_json%> ><canvas id="price-chart"></canvas></div>
<script type="module" src="chart_controller.js"></script>

